<Window x:Class="BankAppUI.GetAllUsers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankAppUI"
        mc:Ignorable="d"
        Title="GetAllUsers" Height="778" Width="1049">
    <Grid Height="778" Width="1049" Background="#FF3686DC">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="4*"></RowDefinition>

        </Grid.RowDefinitions>
        <Label x:Name="lblAllUsers" Content="All Users" Grid.Row="0"  
               HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="36" FontFamily="Times New Roman" FontWeight="Bold" Margin="50,0,0,0" />
        
        <DataGrid x:Name="dgAccountStatement" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" FontFamily="Times New Roman" Margin="10" ColumnHeaderHeight="6">

        </DataGrid>


    </Grid>

</Window>
